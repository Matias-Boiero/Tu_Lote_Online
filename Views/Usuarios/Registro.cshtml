@model TuLote.Models.ViewModel.RegistroVM
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="form-contacto2 col-lg-3 col-md-6 col-9 m-6 col-xs-10  col-10 ms-1">
        <div class="card rounded-1">
            <div class="card-body ">
                <h2 class="text-success text-center">Registrarse</h2>
                <div class="card">
                    <div class="card-body">

                        <form asp-action="Registro">

                            <div class="col-md-12 text-center">
                                <div asp-validation-summary="ModelOnly" class="text-dander"> </div>
                                <div class="mb-2 form-group">
                                    @*<label asp-for="Nombre" class="form-label"></label>*@
                                    <input type="text" asp-for="Nombre" placeholder="--Nombre--" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="mb-2">
                                    @*<label asp-for="Apellido" class="form-label"></label>*@
                                    <input asp-for="Apellido" placeholder="--Apellido--" class="form-control" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                                <div class="mb-2">
                                    @*<label asp-for="Alias" class="form-label"></label>*@
                                    <input asp-for="Alias" placeholder="--Alias--(Ej: MRB)" class="form-control" />
                                    <span asp-validation-for="Alias" class="text-danger"></span>
                                </div>

                                @*<div class="col-md-6">
                                    <div class="mb-3">
                                    <label asp-for="Telefono" class="form-label"></label>
                                    <input asp-for="Telefono" class="form-control" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                    </div>*@
                                <div class="mb-2">
                                    @* <label asp-for="Email" class="form-label"></label>*@
                                    <input asp-for="Email" type="email" class="form-control" placeholder="ejemplo@gmal.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-2">
                                    @*<label asp-for="Contraseña" class="form-label"></label>*@
                                    <input asp-for="Contraseña" class="form-control" placeholder="--Ingrese su clave--" />
                                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="text-center d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-block">Registrarse</button>
                                <a class="btn btn-warning btn-block" asp-action="login">Loguearme</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}

