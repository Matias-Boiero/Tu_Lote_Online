@model TuLote.Models.Lote

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="danger"></div>
    <div class="Row">

        <h3 class="text-start text-primary">Crear Lote</h3>

        <div class="col-md-4 mb-3">
            <label asp-for="Barrio_Id" class="control-label"></label>
            <select asp-for="Barrio_Id" class="form-control" asp-items="ViewBag.Barrio_Id"></select>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Numero" class="mb-2" style="font-weight:bold;"></label>
            <input asp-for="Numero" class="form-control">
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Metros" class="mb-2" style="font-weight:bold;"></label>
            <input asp-for="Metros" class="form-control">
            <span asp-validation-for="Metros" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Etapa" class="mb-2" style="font-weight:bold;"></label>
            <input asp-for="Etapa" class="form-control">
            <span asp-validation-for="Etapa" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Orientacion" class="mb-2" style="font-weight:bold;"></label>

            @Html.DropDownList("Orientacion", Html.GetEnumSelectList<Orientacion>(), "Seleccionar orientación", new { @class = "form-control" })

        </div>


        <div class="col-md-4 mb-3">
            <label asp-for="Disponible" class="mb-2" style="font-weight:bold;"></label>
            <p><input asp-for="Disponible" type="radio" value="True"> Activo </p>
            <p><input asp-for="Disponible" type="radio" value="False"> Inactivo </p>
            <span asp-validation-for="Disponible" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Precio" class="mb-2" style="font-weight:bold;"></label>
            <input asp-for="Precio" class="form-control">
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Crear</button>
        <a class="btn btn-primary" asp-action="Index">Regresar</a>
    </div>
</form>


